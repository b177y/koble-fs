HOSTNAME=$(cat /proc/cmdline | awk -v FS== -v RS=" " '($1=="name") {print $2}')
KOBLE_FILESYSTEM_VERSION=$(awk '/filesystem version/ {print $NF}' /etc/koble-filesystem-version)
KOBLE_KERNEL_VERSION=$(uname -r | cut -d '-' -f 4-)
KOBLE_VERSION=$(uname -r | cut -d '-' -f 1)
: ${KOBLE_FILESYSTEM_VERSION:="<unknown>"}
: ${KOBLE_KERNEL_VERSION:="<unknown>"}
: ${KOBLE_VERSION:="<unknown>"}

echo "Koble kernel $KOBLE_KERNEL_VERSION ($KERNEL_VERSION), filesystem $KOBLE_FILESYSTEM_VERSION"
echo -e "\e[34;1m##################################"
echo "##                              ##"
echo "##           KOBLE              ##"
echo "##                              ##"
echo -e "##################################\e[0m"
echo
echo -e "\e[1mVirtual machine \"$HOSTNAME\" booting up...\e[0m"
echo

